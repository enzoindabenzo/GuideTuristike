@model DK1.Models.Destination

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.Name</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 40px;
            background-color: #F5F5F5;
        }

        .card {
            background-color: #fff;
            border: 1.5px solid #4F6F52;
            border-radius: 12px;
            padding: 25px 30px;
            max-width: 700px;
            margin: 0 auto;
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        }

            .card img {
                width: 100%;
                height: auto;
                border-radius: 10px;
                margin-bottom: 20px;
                border: 1px solid #ddd;
            }

            .card h2 {
                color: #3A4D39;
                margin-bottom: 10px;
                font-size: 26px;
            }

        .meta-info {
            font-size: 16px;
            color: #555;
            margin-bottom: 10px;
        }

            .meta-info strong {
                color: #4F6F52;
                font-weight: 600;
            }

        .description {
            margin-top: 20px;
            font-size: 15.5px;
            line-height: 1.6;
            color: #333;
        }

        .footer {
            margin-top: 30px;
            font-size: 13px;
            color: #aaa;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="card">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Url.Content(Model.ImagePath)" alt="@Model.Name" />
        }

        <h2>@Model.Name</h2>

        <div class="meta-info">
            <p><strong>Rajoni:</strong> @Model.Region</p>
            <p><strong>Kategoria:</strong> @(Model.Category?.Name ?? "Pa kategori")</p>
        </div>

        <div class="meta-info">
            <p><strong>Rajoni:</strong> @Model.Region</p>
            <p><strong>Kategoria:</strong> @(Model.Category?.Name ?? "Pa kategori")</p>

            @if (Model.MinDailyExpenseAL.HasValue || Model.MaxDailyExpenseAL.HasValue)
            {
                <p>
                    <strong>Buxheti Ditor</strong><br />
                    @Model.DailyExpenseRange <br />
                    <strong>Mesatarja:</strong> @Model.MedianDailyExpenseAL ALL
                </p>
            }
        </div>


        <div class="description">
            @Html.Raw(Model.Description)
        </div>

        <div class="footer">
            Gjeneruar nga Guida Turistike Shqipëri &copy; @DateTime.Now.Year
        </div>
    </div>
</body>
</html>

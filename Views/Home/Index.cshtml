@{
    ViewBag.Title = ViewBag.Language == "en" ? "Welcome to Rural Tourism" : "Mirësevini në Turizmin Rural";
    var lang = ViewBag.Language as string ?? "sq"; // default Shqip
}

<!DOCTYPE html>
<html lang="@lang" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        :root {
            --primary: #4F6F52;
            --primary-dark: #3A4D39;
            --secondary: #ECE3CE;
            --light: #F5F5F5;
            --dark: #212529;
            --gray: #6C757D;
            --body-bg-light: #FFFFFF;
            --body-bg-dark: #121212;
            --card-bg-dark: #1E1E1E;
            --text-light: #F8F9FA;
            --text-dark: #212529;
        }

        [data-bs-theme="light"] {
            --body-bg: var(--body-bg-light);
            --card-bg: var(--light);
            --text-color: var(--text-dark);
            --header-bg: var(--light);
            --border-color: #dee2e6;
        }

        [data-bs-theme="dark"] {
            --body-bg: var(--body-bg-dark);
            --card-bg: var(--card-bg-dark);
            --text-color: var(--text-light);
            --header-bg: #1A1A1A;
            --border-color: #444;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: var(--body-bg);
            color: var(--text-color);
            transition: all 0.3s ease;
        }

        .text-primary {
            color: var(--primary) !important;
        }

        .bg-primary {
            background-color: var(--primary) !important;
        }

        .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary-dark);
        }

            .btn-primary:hover {
                background-color: var(--primary-dark);
                border-color: var(--primary-dark);
            }

        .btn-outline-primary {
            color: var(--primary);
            border-color: var(--primary);
        }

            .btn-outline-primary:hover {
                background-color: var(--primary);
                border-color: var(--primary);
                color: white;
            }

        /* Hero Section */
       /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, rgba(79, 111, 82, 0.1) 0%, rgba(236, 227, 206, 0.1) 100%);
            border-radius: 1rem;
            padding: 4rem 2rem;
            position: relative;
            overflow: hidden;
            margin-bottom: 4rem;
            z-index: 2;
        }

        .hero-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none"><path fill="none" stroke="%234F6F52" stroke-width="0.5" stroke-opacity="0.1" d="M0,0 L100,100 M100,0 L0,100" /></svg>');
            background-size: 100% 100%;
            opacity: 0.1;
            z-index: -1;
        }

        .hero-section .btn-primary {
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .hero-section .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 8px rgba(0,0,0,0.15);
        }

        /* Responsive Adjustments for Hero Section */
        @@media (max-width: 768px) {
            .hero-section {
                margin-bottom: 3rem;
                padding: 3rem 1rem;
            }

            .hero-title {
                font-size: 2.5rem;
            }
        }

        @@media (max-width: 576px) {
            .hero-section {
                margin-bottom: 2.5rem;
            }

            .hero-title {
                font-size: 2rem;
            }

            .hero-subtitle {
                font-size: 1rem;
            }
        }

        /* Existing Hero Title and Subtitle Styles */
        .hero-title {
            font-weight: 800;
            font-size: 3rem;
            margin-bottom: 1.5rem;
            position: relative;
            display: inline-block;
        }

        .hero-title::after {
            content: '';
            position: absolute;
            width: 60%;
            height: 4px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            bottom: -10px;
            left: 20%;
            border-radius: 2px;
        }

        .hero-subtitle {
            font-size: 1.25rem;
            max-width: 700px;
            margin: 0 auto 2rem;
        }

        /* Feature Cards */
        .feature-card {
            border: none;
            border-radius: 1rem;
            overflow: hidden;
            transition: all 0.3s ease;
            background-color: var(--card-bg);
            height: 100%;
            margin-bottom: 2rem;
        }

            .feature-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            }

        .feature-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
            font-size: 2rem;
        }

        /* Why Visit Section */
        .why-visit-section {
            background: linear-gradient(135deg, rgba(79, 111, 82, 0.05) 0%, rgba(236, 227, 206, 0.05) 100%);
            border-radius: 1rem;
            padding: 3rem;
            margin-bottom: 4rem;
        }

        .benefit-item {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .benefit-icon {
            flex-shrink: 0;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Gallery */
        .gallery-item {
            position: relative;
            border-radius: 1rem;
            overflow: hidden;
            height: 250px;
            transition: all 0.3s ease;
            margin-bottom: 2rem;
        }

            .gallery-item:hover {
                transform: scale(1.02);
            }

            .gallery-item img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s ease;
            }

            .gallery-item:hover img {
                transform: scale(1.1);
            }

        .gallery-caption {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
            padding: 1.5rem;
            color: white;
        }

        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            border-radius: 1rem;
            padding: 4rem 2rem;
            position: relative;
            overflow: hidden;
            margin-bottom: 4rem;
        }

            .cta-section::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none"><path fill="none" stroke="white" stroke-width="0.5" stroke-opacity="0.1" d="M0,0 L100,100 M100,0 L0,100" /></svg>');
                background-size: 100% 100%;
                opacity: 0.1;
                pointer-events: none;
                z-index: 0;
            }

        .cta-btn {
            background-color: white;
            color: var(--primary);
            border: none;
            padding: 0.75rem 2rem;
            font-weight: 600;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

            .cta-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            }

        /* Section Headings */
        .section-heading {
            margin-bottom: 3rem;
            position: relative;
            display: inline-block;
        }

            .section-heading::after {
                content: '';
                position: absolute;
                width: 50%;
                height: 3px;
                background: linear-gradient(90deg, var(--primary), var(--secondary));
                bottom: -10px;
                left: 25%;
                border-radius: 2px;
                pointer-events: none;
            }
        .hero-section {
            position: relative;
            z-index: 2;
        }




        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .why-visit-section {
                padding: 2rem 1rem;
            }

            .gallery-item {
                height: 200px;
            }

            .hero-section {
                margin-bottom: 3rem;
                padding: 3rem 1rem;
            }

            .why-visit-section {
                margin-bottom: 3rem;
            }

            .cta-section {
                margin-bottom: 3rem;
                padding: 3rem 1rem;
            }
        }

        @@media (max-width: 576px) {
            .hero-title {
                font-size: 2rem;
            }

            .hero-subtitle {
                font-size: 1rem;
            }

            .gallery-item {
                height: 180px;
                margin-bottom: 1.5rem;
            }

            .hero-section {
                margin-bottom: 2.5rem;
            }

            .why-visit-section {
                margin-bottom: 2.5rem;
            }

            .cta-section {
                margin-bottom: 2.5rem;
            }
        }
        /* Image Container Styles */
        .image-container {
            width: 100%;
            height: 400px; /* Fixed height */
            max-width: 600px; /* Maximum width */
            margin: 0 auto; /* Center the container */
        }

            .image-container img {
                width: 100%;
                height: 100%;
                object-fit: cover; /* Ensures image covers the space while maintaining aspect ratio */
                object-position: center; /* Centers the image in the container */
            }

        @@media (max-width: 768px) {
            .image-container {
                height: 350px;
            }
        }

        @@media (max-width: 576px) {
            .image-container {
                height: 300px;
            }
        }
    </style>
</head>
<body>
    <div class="container py-4 py-lg-5">
        <div class="d-flex justify-content-end mb-5">
            <div class="d-flex gap-3">
                <button class="btn btn-outline-primary" id="themeToggle">
                    <i class="bi bi-sun-fill d-none"></i>
                    <i class="bi bi-moon-fill"></i>
                </button>
            </div>
        </div>

        <section class="hero-section text-center position-relative">
            <div class="container">
                <h1 class="hero-title">
                    @(lang == "en" ? "Discover Rural Albania" : "Zbuloni Shqipërinë Rurale")
                </h1>
                <p class="hero-subtitle">
                    @(lang == "en" ? "Explore hidden gems, traditions, and unforgettable landscapes." : "Eksploroni bukuri të fshehura, tradita dhe peizazhe të paharrueshme.")
                </p>
                <div class="d-flex justify-content-center">
                    <button id="browseDestinations" class="btn btn-primary btn-lg px-4 py-3 w-auto">
                        <i class="bi bi-compass me-2"></i>
                        @(lang == "en" ? "Browse Destinations" : "Shfleto Destinacionet")
                    </button>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="mb-5">
            <h2 class="text-center section-heading">
                @(lang == "en" ? "What We Offer" : "Çfarë Ofrojmë")
            </h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card shadow-sm p-4 text-center">
                        <div class="feature-icon">
                            <i class="bi bi-tree"></i>
                        </div>
                        <h3 class="mb-3">@(lang == "en" ? "Nature" : "Natyra")</h3>
                        <p>
                            @(lang == "en" ? "Enjoy untouched landscapes, mountains and rivers." : "Shijoni peizazhe të paprekura, male dhe lumenj.")
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card shadow-sm p-4 text-center">
                        <div class="feature-icon">
                            <i class="bi bi-house-heart"></i>
                        </div>
                        <h3 class="mb-3">@(lang == "en" ? "Tradition" : "Tradita")</h3>
                        <p>
                            @(lang == "en" ? "Meet welcoming locals and experience authentic culture." : "Njihuni me mikpritjen dhe kulturën autentike.")
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card shadow-sm p-4 text-center">
                        <div class="feature-icon">
                            <i class="bi bi-egg-fried"></i>
                        </div>
                        <h3 class="mb-3">@(lang == "en" ? "Cuisine" : "Gastronomi")</h3>
                        <p>
                            @(lang == "en" ? "Taste traditional food made with local ingredients." : "Shijoni ushqime tradicionale të përgatitura nga vendasit.")
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Why Visit Section -->
        <section class="why-visit-section">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <h2 class="text-center text-lg-start section-heading">
                        @(lang == "en" ? "Why visit Rural Albania?" : "Pse të vizitosh Shqipërinë Rurale?")
                    </h2>
                    <div class="benefits-list">
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="bi bi-cash-coin"></i>
                            </div>
                            <div>
                                <h5>@(lang == "en" ? "Affordable eco-tourism" : "Eko-turizëm i përballueshëm")</h5>
                                <p class="mb-0">@(lang == "en" ? "Experience nature without breaking the bank." : "Përjetoni natyrën pa shkuar jashtë buxhetit.")</p>
                            </div>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="bi bi-music-note-beamed"></i>
                            </div>
                            <div>
                                <h5>@(lang == "en" ? "Rich traditions and folklore" : "Tradita dhe folklor i pasur")</h5>
                                <p class="mb-0">@(lang == "en" ? "Discover centuries-old customs and music." : "Zbuloni zakonet dhe muzikën shekullore.")</p>
                            </div>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="bi bi-egg-fried"></i>
                            </div>
                            <div>
                                <h5>@(lang == "en" ? "Delicious local cuisine" : "Kuzhinë e shijshme lokale")</h5>
                                <p class="mb-0">@(lang == "en" ? "Farm-to-table meals with authentic flavors." : "Ushqime të freskëta me shije autentike.")</p>
                            </div>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="bi bi-people-fill"></i>
                            </div>
                            <div>
                                <h5>@(lang == "en" ? "Friendly and hospitable locals" : "Banorë mikpritës")</h5>
                                <p class="mb-0">@(lang == "en" ? "Warm welcomes and genuine connections." : "Mikpritje e ngrohtë dhe lidhje të vërteta.")</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="image-container rounded-3 overflow-hidden shadow">
                        <img src="@Url.Content("~/Content/Images/AL.jpg")" alt="Albanian Village">
                    </div>
                </div>
            </div>
        </section>

        <!-- Gallery Section -->
        <section class="mb-5">
            <h2 class="text-center section-heading">
                @(lang == "en" ? "Photo Gallery" : "Galeria e Fotove")
            </h2>
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="gallery-item shadow">
                        <img src="~/Content/Images/nature.jpg" alt="Albanian Nature">
                        <div class="gallery-caption">
                            <h4 class="mb-0">@(lang == "en" ? "Breathtaking Nature" : "Natyrë Mahnitëse")</h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="gallery-item shadow">
                        <img src="~/Content/Images/tradition.jpg" alt="Albanian Traditions">
                        <div class="gallery-caption">
                            <h4 class="mb-0">@(lang == "en" ? "Rich Traditions" : "Tradita të Pasura")</h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="gallery-item shadow">
                        <img src="~/Content/Images/food.jpeg" alt="Albanian Food">
                        <div class="gallery-caption">
                            <h4 class="mb-0">@(lang == "en" ? "Authentic Cuisine" : "Kuzhinë Autentike")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="cta-section text-center text-white">
            <h2 class="display-5 fw-bold mb-3">
                @(lang == "en" ? "Plan your trip from Tirana" : "Planifiko udhëtimin nga Tirana")
            </h2>
            <p class="fs-5 mb-4">
                @(lang == "en" ? "Use our calculator to find your best route." : "Përdor kalkulatorin tonë për të gjetur rrugën më të mirë.")
            </p>
            <button id="openCalculator" class="btn cta-btn text-decoration-none">
                <i class="bi bi-calculator me-2"></i>
                @(lang == "en" ? "Open Calculator" : "Hap Kalkulatorin")

            </button>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Theme toggle functionality (previous code remains the same)
            const themeToggle = document.getElementById('themeToggle');
            const sunIcon = themeToggle.querySelector('.bi-sun-fill');
            const moonIcon = themeToggle.querySelector('.bi-moon-fill');

            // Check for saved theme preference or use system preference
            const savedTheme = localStorage.getItem('theme');
            const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

            if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
                document.documentElement.setAttribute('data-bs-theme', 'dark');
                sunIcon.classList.remove('d-none');
                moonIcon.classList.add('d-none');
            } else {
                document.documentElement.setAttribute('data-bs-theme', 'light');
                moonIcon.classList.remove('d-none');
                sunIcon.classList.add('d-none');
            }

            themeToggle.addEventListener('click', function () {
                const currentTheme = document.documentElement.getAttribute('data-bs-theme');
                if (currentTheme === 'light') {
                    document.documentElement.setAttribute('data-bs-theme', 'dark');
                    localStorage.setItem('theme', 'dark');
                    sunIcon.classList.remove('d-none');
                    moonIcon.classList.add('d-none');
                } else {
                    document.documentElement.setAttribute('data-bs-theme', 'light');
                    localStorage.setItem('theme', 'light');
                    moonIcon.classList.remove('d-none');
                    sunIcon.classList.add('d-none');
                }
            });

            // Listen for system theme changes
            window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', e => {
                if (!localStorage.getItem('theme')) {
                    if (e.matches) {
                        document.documentElement.setAttribute('data-bs-theme', 'dark');
                        sunIcon.classList.remove('d-none');
                        moonIcon.classList.add('d-none');
                    } else {
                        document.documentElement.setAttribute('data-bs-theme', 'light');
                        moonIcon.classList.remove('d-none');
                        sunIcon.classList.add('d-none');
                    }
                }
            });

            // Navigation buttons
            const browseDestinationsBtn = document.getElementById('browseDestinations');
            const openCalculatorBtn = document.getElementById('openCalculator');

            // Current language
            const currentLang = '@lang';

            // Debug function to help diagnose navigation issues
            function navigateTo(url) {
                console.log('Attempting to navigate to:', url);
                try {
                    window.location.href = url;
                } catch (error) {
                    console.error('Navigation error:', error);
                    alert('Navigation failed. Please try again.');
                }
            }

            // Browse Destinations Button
            browseDestinationsBtn.addEventListener('click', function() {
                // Multiple possible route formats
                const routes = [
                    `/Home/GuidaTuristike?language=${currentLang}`,
                    `/GuidaTuristike?language=${currentLang}`,
                    `/${currentLang}/Home/GuidaTuristike`,
                    `/${currentLang}/GuidaTuristike`
                ];

                // Try each route
                for (let route of routes) {
                    try {
                        navigateTo(route);
                        break;
                    } catch (error) {
                        console.warn(`Failed to navigate with route: ${route}`, error);
                    }
                }
            });

            // Open Calculator Button
            openCalculatorBtn.addEventListener('click', function() {
                // Multiple possible route formats
                const routes = [
                    `/TransportCalculator/Index?language=${currentLang}`,
                    `/Index?language=${currentLang}`,
                    `/${currentLang}/TransportCalculator/Index`,
                    `/${currentLang}/Index`
                ];

                // Try each route
                for (let route of routes) {
                    try {
                        navigateTo(route);
                        break;
                    } catch (error) {
                        console.warn(`Failed to navigate with route: ${route}`, error);
                    }
                }
            });
        });
    </script>
</body>
</html>
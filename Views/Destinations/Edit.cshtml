@using DK1.Models
@model Destination
@{
    ViewBag.Title = "Ndrysho Destinacionin";
}

<style>
    .form-container {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 2.5rem;
        margin: 2rem auto;
        max-width: 800px;
    }

    .form-header {
        color: #2c3e50;
        border-bottom: 1px solid #eaeaea;
        padding-bottom: 1rem;
        margin-bottom: 2rem;
    }

    .form-label {
        font-weight: 600;
        color: #34495e;
        margin-bottom: 0.5rem;
    }

    .form-control-custom {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 12px 16px;
        transition: all 0.3s ease;
    }

        .form-control-custom:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
        }

    .btn-submit {
        background-color: #3498db;
        border: none;
        border-radius: 8px;
        padding: 12px 24px;
        font-weight: 600;
        transition: all 0.3s ease;
        color: white;
    }

        .btn-submit:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
        }

    .btn-back {
        border-radius: 8px;
        padding: 12px 24px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .validation-error {
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }
</style>

<div class="container">
    <div class="form-container">
        <div class="form-header">
            <h2 class="mb-0">@ViewBag.Title</h2>
            <p class="text-muted mt-2">Ndryshoni të dhënat për destinacionin</p>
        </div>

        @using (Html.BeginForm("Edit", "Destinations", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="mb-4">
                @Html.LabelFor(model => model.Name, "Emri", new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control form-control-custom", placeholder = "Shkruani emrin e destinacionit" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger validation-error" })
            </div>

            <div class="mb-4">
                @Html.LabelFor(model => model.Region, "Rajoni", new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Region, new { @class = "form-control form-control-custom", placeholder = "Shkruani rajonin" })
                @Html.ValidationMessageFor(model => model.Region, "", new { @class = "text-danger validation-error" })
            </div>

            <div class="mb-4">
                @Html.LabelFor(model => model.Description, "Përshkrimi", new { @class = "form-label" })
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control form-control-custom", rows = 5, placeholder = "Shkruani përshkrimin..." })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger validation-error" })
            </div>

            <div class="mb-4">
                @Html.LabelFor(model => model.CategoryId, "Kategoria", new { @class = "form-label" })
                @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.CategoryList, "-- Zgjidh Kategori --", new { @class = "form-control form-control-custom" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger validation-error" })
            </div>

            <div class="mb-4">
                @Html.LabelFor(model => model.MinDailyExpenseAL, "Shpenzimi Minimal Ditor (ALL)", new { @class = "form-label" })
                @Html.TextBoxFor(model => model.MinDailyExpenseAL, new { @class = "form-control form-control-custom", placeholder = "Shpenzimi minimal ditor (ALL)", type = "number", step = "100" })
                @Html.ValidationMessageFor(model => model.MinDailyExpenseAL, "", new { @class = "text-danger validation-error" })
            </div>

            <div class="mb-4">
                @Html.LabelFor(model => model.MaxDailyExpenseAL, "Shpenzimi Maksimal Ditor (ALL)", new { @class = "form-label" })
                @Html.TextBoxFor(model => model.MaxDailyExpenseAL, new { @class = "form-control form-control-custom", placeholder = "Shpenzimi maksimal ditor (ALL)", type = "number", step = "100" })
                @Html.ValidationMessageFor(model => model.MaxDailyExpenseAL, "", new { @class = "text-danger validation-error" })
            </div>

            <div class="mb-4">
                <label class="form-label">Ngarko Foto të Re (opsionale)</label>
                <input type="file" name="imageFile" class="form-control form-control-custom" accept="image/*" />
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mt-2">
                        <label>Foto aktuale:</label><br />
                        <img src="@Model.ImagePath" alt="Foto" width="200" />
                    </div>
                }
            </div>

            <div class="d-flex justify-content-between mt-5">
                @Html.ActionLink("Kthehu", "Index", null, new { @class = "btn btn-outline-secondary btn-back" })
                <button type="submit" class="btn btn-submit">Ruaj Ndryshimet</button>
            </div>
        }
    </div>
</div>